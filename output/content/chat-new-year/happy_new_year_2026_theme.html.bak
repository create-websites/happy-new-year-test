<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Happy New Year 2026 ‚Äì Multilingual Greetings</title>
  <meta name="description" content="A festive Happy New Year 2026 webpage with wishes in many languages." />
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;800&family=Playfair+Display:wght@700;900&display=swap" rel="stylesheet">
  <style>
    :root{
      --bg:#2b0d0d;          /* chocolate reddish background */
      --fg:#f8f1f0;          /* primary text */
      --muted:#d6b8b8;
      --accent:#ff4444;      /* reddish accent */
      --accent2:#ff9966;     /* warm accent */
      --card:#3d1414;        /* card bg */
      --card2:#4a1a1a;
      --chip:#5c2020;
      --success:#ff9966;
    }
    *{box-sizing:border-box}
    html,body{margin:0;height:100%;background:radial-gradient(1200px 700px at 50% -10%, #662222 0%, #2b0d0d 55%, var(--bg) 100%);color:var(--fg);font-family:Inter,system-ui,-apple-system,Segoe UI,Roboto,Helvetica,Arial,sans-serif}
    a{color:inherit}

    .sky{position:fixed;inset:0;z-index:-1;pointer-events:none}

    header{
      position:relative;
      padding:clamp(24px,4vw,48px) 20px 8px;
      text-align:center;
    }
    .year{
      font-family:"Playfair Display",serif;
      font-weight:900;
      font-size:clamp(48px,8vw,120px);
      line-height:1;
      letter-spacing:2px;
      background:linear-gradient(90deg,#ff6666, #ffcc99, #ff4444, #ff9966);
      -webkit-background-clip:text;background-clip:text;color:transparent;
      filter:drop-shadow(0 6px 18px rgba(255,100,100,.35));
      animation:shine 6s linear infinite;
    }
    @keyframes shine{to{background-position:1200px 0}}

    .subtitle{color:var(--muted);margin-top:8px;font-size:clamp(14px,2.2vw,18px)}

    .toolbar{
      display:flex;gap:10px;flex-wrap:wrap;justify-content:center;align-items:center;
      padding:16px 14px 24px;margin:8px auto 0;max-width:1100px;
    }
    .toolbar .chip{background:var(--chip);border:1px solid #6b2c2c;color:#f8dcdc;
      padding:10px 14px;border-radius:999px;display:inline-flex;gap:10px;align-items:center}
    .toolbar input[type="search"]{
      min-width:260px;border:none;outline:none;background:transparent;color:#fff;font-size:16px
    }
    .toolbar button{
      background:linear-gradient(180deg,#ff6666,#cc3333);color:#fff;border:none;border-radius:999px;padding:10px 16px;font-weight:700;cursor:pointer;
      box-shadow:0 6px 18px rgba(255,80,80,.35);transition:transform .1s ease}
    .toolbar button:active{transform:translateY(1px)}

    .count{font-size:14px;color:#f1cccc;opacity:.85}

    .grid{
      --min: 260px;
      display:grid;grid-template-columns:repeat(auto-fit,minmax(var(--min),1fr));
      gap:16px;max-width:1200px;margin:0 auto 100px;padding:0 16px 32px
    }
    .card{background:linear-gradient(180deg,var(--card),var(--card2));border:1px solid #662222;border-radius:16px;padding:18px 16px 16px;box-shadow:0 10px 30px rgba(0,0,0,.25)}
    .top{display:flex;align-items:start;gap:12px;margin-bottom:8px}
    .flag{font-size:26px;filter:drop-shadow(0 2px 6px rgba(0,0,0,.25))}
    .lang{font-weight:800;letter-spacing:.2px}
    .native{font-size:20px;margin:6px 0 2px}
    .translit{color:#f5c0c0;opacity:.8;font-size:13px}

    footer{position:sticky;bottom:0;background:linear-gradient(180deg,rgba(43,13,13,.0),rgba(43,13,13,.85));backdrop-filter:blur(4px);border-top:1px solid #6b2c2c}
    .footwrap{max-width:1100px;margin:0 auto;padding:10px 16px;display:flex;gap:12px;align-items:center;justify-content:space-between}

    .footwrap .actions{display:flex;gap:10px;flex-wrap:wrap}
    .ghost{background:transparent;border:1px solid #803333;color:#ffdede;padding:10px 14px;border-radius:12px;cursor:pointer}

    @media (prefers-reduced-motion: reduce){.sky{display:none}}
  </style>
</head>
<body>
  <canvas id="confetti" class="sky" aria-hidden="true"></canvas>

  <header>
    <div class="year" aria-label="Happy New Year 2026">HAPPY NEW YEAR 2026</div>
    <div class="subtitle">Kind greetings worldwide ‚Äî explore, print, or find your language here.</div>

    <div class="toolbar">
      <div class="chip" title="Search languages">
        üîé <input id="search" type="search" placeholder="Search language or country‚Ä¶" />
      </div>
      <button id="copyAll" title="Copy all wishes as plain text">Copy All</button>
      <button id="toggleFx" class="ghost" title="Toggle fireworks/confetti">Toggle Fireworks</button>
      <span id="count" class="count" role="status"></span>
    </div>
  </header>

  <main class="grid" id="grid" aria-live="polite"></main>

<!--
  <footer>
    <div class="footwrap">
      <div>‚ú® Made with love for <strong>2026</strong>. Print via <kbd>Ctrl/Cmd</kbd> + <kbd>P</kbd>.</div>
      <div class="actions">
        <button class="ghost" onclick="window.print()">üñ®Ô∏è Print</button>
        <button class="ghost" id="shareBtn">üì§ Share</button>
      </div>
    </div>
  </footer>
-->

<script>
// Fireworks effect instead of confetti
const canvas = document.getElementById('confetti');
const ctx = canvas.getContext('2d');
let fxEnabled = true;
let W = canvas.width = window.innerWidth;
let H = canvas.height = window.innerHeight;
window.addEventListener('resize',()=>{W=canvas.width=innerWidth;H=canvas.height=innerHeight});

function random(min,max){return Math.random()*(max-min)+min}

let particles=[];
function createFirework(){
  const x=random(W*0.2,W*0.8);
  const y=random(H*0.1,H*0.5);
  const count=60;
  for(let i=0;i<count;i++){
    const angle=(Math.PI*2*i)/count;
    const speed=random(2,7);
    particles.push({x,y,vx:Math.cos(angle)*speed,vy:Math.sin(angle)*speed,life:random(60,100),color:`hsl(${Math.floor(random(0,360))},100%,60%)`});
  }
}

function loop(){
  if(!fxEnabled){ctx.clearRect(0,0,W,H);requestAnimationFrame(loop);return}
  ctx.fillStyle='rgba(43,13,13,0.3)';
  ctx.fillRect(0,0,W,H);
  particles.forEach((p,i)=>{
    p.x+=p.vx;p.y+=p.vy;p.vy+=0.05;p.life--;
    ctx.fillStyle=p.color;
    ctx.fillRect(p.x,p.y,2,2);
    if(p.life<=0) particles.splice(i,1);
  });
  if(Math.random()<0.05) createFirework();
  requestAnimationFrame(loop);
}
loop();

const toggleFxBtn=document.getElementById('toggleFx');
toggleFxBtn.addEventListener('click',()=>{fxEnabled=!fxEnabled;toggleFxBtn.textContent=fxEnabled? 'Pause Fireworks':'Resume Fireworks'});
</script>
</body>
</html>

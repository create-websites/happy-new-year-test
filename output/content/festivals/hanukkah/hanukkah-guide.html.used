    <script>
        document.addEventListener('DOMContentLoaded', () => {
            
            const navLinks = document.querySelectorAll('.nav-link');
            const sections = document.querySelectorAll('section[id]');
            const mobileNav = document.getElementById('mobile-nav');

            const activateNav = (id) => {
                navLinks.forEach(link => {
                    link.classList.toggle('active', link.getAttribute('href') === `#${id}`);
                });
                if (mobileNav.value !== `#${id}`) {
                    mobileNav.value = `#${id}`;
                }
            };
            
            const observer = new IntersectionObserver((entries) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        activateNav(entry.target.id);
                    }
                });
            }, { rootMargin: '-30% 0px -70% 0px' });
            
            sections.forEach(section => {
                observer.observe(section);
            });

            mobileNav.addEventListener('change', (e) => {
                window.location.href = e.target.value;
            });
            
            const ctx = document.getElementById('mealChart').getContext('2d');
            const mealChart = new Chart(ctx, {
                type: 'doughnut',
                data: {
                    labels: ['Fried Foods (Latkes, Sufganiyot)', 'Meat/Poultry (Brisket, Chicken)', 'Side Dishes (Applesauce, Salad)', 'Sweets & Desserts (Gelt)'],
                    datasets: [{
                        label: 'Hanukkah Meal Components',
                        data: [40, 30, 20, 10], // Conceptual percentage distribution
                        backgroundColor: [
                            'rgba(255, 215, 0, 0.9)', /* Gold/Yellow for Fried */
                            'rgba(0, 0, 139, 0.9)', /* Dark Blue for Main Course */
                            'rgba(173, 216, 230, 0.9)', /* Light Blue for Sides */
                            'rgba(240, 128, 128, 0.9)'  /* Light Coral for Sweets */
                        ],
                        borderColor: '#FFFFFF',
                        borderWidth: 2
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            position: 'bottom',
                            labels: {
                                font: {
                                    family: "'Inter', sans-serif"
                                }
                            }
                        },
                        tooltip: {
                            callbacks: {
                                label: function(context) {
                                    const label = context.label || '';
                                    let text = '';
                                    if (label.includes('Fried Foods')) text = 'The central category, eaten to recall the miracle of the oil.';
                                    else if (label.includes('Meat/Poultry')) text = 'Traditional main course dishes, like brisket, often served for holiday gatherings.';
                                    else if (label.includes('Side Dishes')) text = 'Applesauce and sour cream often accompany latkes; salads provide balance.';
                                    else if (label.includes('Sweets')) text = 'Chocolate gelt and other desserts conclude the festive meal.';
                                    return `${label}: ${text}`;
                                }
                            }
                        }
                    }
                }
            });

        });
    </script>

